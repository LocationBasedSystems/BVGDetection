<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_clues_item_name"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:padding="6dp"
        android:textSize="18dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_clues_item_checkimage"
        android:layout_alignParentEnd="true"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:padding="20dp"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_clues_item_name"
        android:id="@+id/add_clues_item_description"
        android:gravity="center"
        android:padding="6dp"
        android:textSize="14dp"/>
</RelativeLayout>