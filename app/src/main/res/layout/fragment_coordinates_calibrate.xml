<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.htwberlin.f4.ai.ba.coordinates.android.measure.MeasureViewImpl">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/coordinates_calibrate_btn_stepsetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_setup_start" />

    <Button
        android:id="@+id/coordinates_calibrate_btn_stepstop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_setup_stop" />

    <TextView
        android:id="@+id/coordinates_calibrate_tv_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/step_setup_instructions" />

    <TextView
        android:id="@+id/coordinates_calibrate_tv_stepcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/step_count" />

    <Button
        android:id="@+id/coordinates_calibrate_btn_stepinc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

    <Button
        android:id="@+id/coordinates_calibrate_btn_stepdec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-" />

    <TextView
        android:id="@+id/coordinates_calibrate_tv_distance_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/step_setup_distance_hint" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0.0"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/coordinates_calibrate_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_setup_save" />


</LinearLayout>
