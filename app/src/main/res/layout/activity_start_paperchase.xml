<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="de.htwberlin.f4.ai.ma.indoorroutefinder.paperchase.StartPaperchaseActivity">

    <TextView
        android:id="@+id/start_paperchase_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="10dp"
        android:text="@string/start_paperchase_description"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/start_paperchase_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
