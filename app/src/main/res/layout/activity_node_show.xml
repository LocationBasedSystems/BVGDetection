<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/id_textview_node_show"
        android:text="@string/measured_node_textview_text"
        android:textColor="@android:color/holo_red_dark"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_textview_show"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/id_textview_node_show"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_textview_show"
        android:layout_centerHorizontal="true"
        android:id="@+id/wifi_show_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/wifi_label_show"
            android:text="@string/initial_wifi_name_show"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toEndOf="@+id/wifi_label_show"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_name_textview_show"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_show_layout"
        android:id="@+id/coordinates_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/coordinates_label_show"
            android:text="@string/coordinates_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/coordinates_textview_show"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toEndOf="@+id/coordinates_label_show"
            />

    </RelativeLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/coordinates_layout"
        android:layout_centerHorizontal="true"
        android:id="@+id/camera_imageview_show"
        android:contentDescription="@string/image_placeholder"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="6dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/infobox_location"
        android:background="@drawable/info_box"
        android:text="@string/node_show_infobox_text"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>