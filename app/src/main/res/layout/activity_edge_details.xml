<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <!-- Layout for Start and Target Node -->
    <!-- divide into 2 parts horizontal -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- start node -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.175">

                <TextView
                    android:id="@+id/edgedetails_start_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="Start Ort"
                    android:textSize="25sp" />
            </RelativeLayout>



            <ImageView
                android:id="@+id/edgedetails_start_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.175">

                <TextView
                    android:id="@+id/edgedetails_start_coords"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="x | y | z"
                    android:textSize="16sp" />
            </RelativeLayout>




        </LinearLayout>



        <!-- target node -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.175">

                <TextView
                    android:id="@+id/edgedetails_target_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="Ziel Ort"
                    android:textSize="25sp" />
            </RelativeLayout>




            <ImageView
                android:id="@+id/edgedetails_target_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.175">

                <TextView
                    android:id="@+id/edgedetails_target_coords"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="x | y | z"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


    <!-- Outer Layout for edge distance and handycapfriendly-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- edge distance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:weightSum="1">

            <!-- divide into 2 parts, one for text and one for value -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Distanz"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/edgedetails_distance_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0.00"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>

        </LinearLayout>

        <!-- gap -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">


        </LinearLayout>

        <!-- handycap friendly -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:weightSum="1">

            <Switch
                android:id="@+id/edgedetails_handycap_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Barrierefrei"

                android:textColor="?android:attr/textColorTertiary"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>

    <!-- additional info -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edgedetails_additional_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Info:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edgedetails_info_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"

            android:textAlignment="center"
            android:textSize="20sp" />


    </LinearLayout>

    <!-- buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/edgedetails_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/delete_button_text" />

        <Button
            android:id="@+id/edgedetails_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/step_setup_save" />


    </LinearLayout>


    <ListView
        android:id="@+id/edgedetails_steplist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.225">


    </ListView>


</LinearLayout>